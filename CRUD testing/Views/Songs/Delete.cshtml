@model CRUD_testing.Models.Songs

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Songs</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Song Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.songName)
        </dd>
        <dt class="col-sm-2">
            Songs Album
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.songAlbum)
        </dd>
        <dt class="col-sm-2">
            Release Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="~/Image/@Html.DisplayFor(model => model.imageName)" style="height: 250px" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
