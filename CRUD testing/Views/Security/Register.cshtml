@model Register
@{
    Layout = "_Layout";
}
<section>
    <div class="container security-container" style="background-color: white; padding: 20px; width: 350px; border-radius: 10px">
        <h2 class="text-center">Sign In</h2>
        <form method="post">
            <div>
                <label asp-for="UserName"></label>
                <input type="text" asp-for="UserName" class="form-control" />
            </div>
            <div>
                <label asp-for="Email"></label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div>
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div>
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>
            <div>
                <br />
                <button type="submit" class="add btn btn-dark">Create</button>
                <a asp-controller="security" asp-action="signin" class="add btn btn-dark" style="float:right">Sign</a>
            </div>
            <div asp-validation-summary="All" class="message"></div>

        </form>
    </div>
</section>

